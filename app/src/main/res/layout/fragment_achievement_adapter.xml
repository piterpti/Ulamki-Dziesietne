<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="#AAAAAA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:src="@drawable/achievement_locked"
            android:id="@+id/achievementListImage"
            android:layout_width="@dimen/achievementStarSize"
            android:layout_height="@dimen/achievementStarSize" />
        <TextView
            android:id="@+id/simpleAchievement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menuAchievements"
            android:paddingLeft="@dimen/paddingTextViewAdapter"
            android:textColor="@android:color/black"
            android:textSize="@dimen/achievementName"
            android:layout_centerVertical="true"
            android:layout_gravity="center"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:layout_width="60dp"
            android:layout_height="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Poziom: "
            android:textSize="@dimen/achievementDetails"
            />
        <TextView
            android:id="@+id/achievementDifficultLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Łatwy"
            android:textSize="@dimen/achievementDetails"
            />
    </LinearLayout>

</LinearLayout>