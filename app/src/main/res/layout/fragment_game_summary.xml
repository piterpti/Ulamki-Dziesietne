<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stacjonarny.graulamki.fragments.GameSummary"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back_to_menu"
            android:id="@+id/go_back_to_menu"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textSize="@dimen/gameQuestionTaskCount"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/gameSummary"
        android:textSize="@dimen/gameSummary"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:paddingTop="18dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/correctAnswers"
            android:textSize="@dimen/summaryCorrectAnswer"/>
        <TextView
            android:id="@+id/summaryGameStatistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30% (3/10)"
            android:textSize="@dimen/summaryCorrectAnswer"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textSummaries"
            android:text="TEST TEXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/summaryComment"
            android:textAlignment="center"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"/>
        <LinearLayout
            android:id="@+id/unlockedLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/unlockedSummaries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/unlockedAchievements"
                android:textSize="@dimen/sumaryUnlockedAchievements"/>
            <ListView
                android:id="@+id/unlockedSummariesList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
