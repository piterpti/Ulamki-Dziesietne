<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/diffLevelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LATWY"
        android:textSize="@dimen/diffLevelTextSize"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/diffLevelTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timeToAnswer"
        android:paddingLeft="@dimen/paddingTextViewAdapter"
        android:textColor="@android:color/black"
        android:textSize="@dimen/diffLevelRest"/>

    <TextView
        android:id="@+id/diffLevelCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/questionsCount"
        android:paddingLeft="@dimen/paddingTextViewAdapter"
        android:textColor="@android:color/black"
        android:textSize="@dimen/diffLevelRest"/>

</LinearLayout>