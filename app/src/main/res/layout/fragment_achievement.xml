<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stacjonarny.graulamki.fragments.AchievementFragment"
    android:background="#AAAAAA"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menuAchievements"
        android:textSize="26sp"
        android:gravity="center_horizontal"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/achievementDiffLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/achDiffLevelText"
        android:textSize="24sp"
        android:paddingBottom="24dp"/>

    <ListView
        android:id="@+id/achievementMenuList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
